<section class="container justify-content-evenly">
    <div class="loginbox">
        <div class="blurred-box">
            <h5 class="text-center">Login In</h5>
            <div class="user-login-box">
                <span class="user-icon"></span>
                <input class="user-name" type="text" placeholder="Username" />
            </div>
            <input class="user-password" type="text" placeholder="password" />
            <button class="login text-center">Login</button>
        </div>
    </div>
    <div class="signupbox">
        <div class="blurred-box">
            <h5 class="text-center">Sign Up</h5>
            <div class="user-login-box">
                <span class="user-icon-signup"></span>
                <input class="user-name" type="text" placeholder="Username" />
            </div>
            <input class="user-password" type="text" placeholder="password" />
            <button class="signup text-center">Sign Up</button>

        </div>
    </div>
</section>